<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <!--Title-->
        <%= title %>
    </title>

    <!--Linking the CSS file-->
    <link rel="stylesheet" href="">
</head>
<body>

    <!--Main container-->
    <div class="main-contianer">
    
        <!--Heading-->
        <div class="heading">
            <h1>TODO App</h1>
        </div>
        <!--Heading End-->

        <!--Creating Todo-->
        <div class="form-container">
            <form action="/create-task" class="main-task" id="task-form" method="POST">
                <div class="description">
                    <label for="description">Description</label>
                    <input type="text" name="description" id="#description" placeholder="What do you need to do?" required>
                </div>

                <!--for category -->
                <div class="categoryy">
                    <div class="category hover">
                        <label for="category">Category</label>
                        <select name="category" id="#ctegory" required>
                            <option value="">Choose a  category</option>
                            <option value="work">Work</option>
                            <option value="school">School</option>
                            <option value="personal">Personal</option>
                            <option value="other">Other's</option>
                        </select>

                    </div>
                    <!--for date-->
                    <div class="date">
                        <label for="date">Due Date</label>
                        <input type="date" name="date" id="#date" required>

                    </div>
                </div>
            </form>
        </div>
        <!--End of creating todo-->
    </div>

    
</body>
</html>